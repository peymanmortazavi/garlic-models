{
    "fields": {
        "DateTime": {
            "meta": {
                "hint": "this is for the django form hints."
            },
            "constraints": [
                {"type": "regex", "pattern": "[01]?[012][/]\\d{2}[/]\\d{4}"}
            ]
        }
    },
    "models": {
        "Company": {
            "name": "string",
            "founded_on": "DateTime"
        },
        "User": {
            ".meta": {
                "description": "A banking user."
            },
            "first_name": "string",
            "last_name": {
                "label": "Last Name",
                "type": "string"
            },
            "zip_code": {
                "label": "Zip Code",
                "description": "Location of the user.",
                "constraints": [
                    {"type": "regex", "pattern": "\\d{5,13}"}
                ]
            },
            "age": {
                "description": "User's age, used for age restricted services.",
                "constraints": [
                    {"type": "range", "min": 21, "max": 150}
                ]
            },
            "birthdate": "DateTime",
            "company": "Company"
        }
    },
    "root": "User"
}
